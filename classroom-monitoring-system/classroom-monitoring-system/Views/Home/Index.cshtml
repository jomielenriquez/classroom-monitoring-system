@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<button onclick="enrollFingerprint('user123')" class="btn btn-primary">Enroll Fingerprint</button>

<script>
    async function enrollFingerprint(userId) {
        try {
            const response = await fetch("http://localhost:5000/enroll", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ userId: userId })
            });

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }

            const result = await response.json();
            console.log("Enroll result:", result);

            alert("Fingerprint Enrollment: " + JSON.stringify(result));
        } catch (error) {
            console.error("Error:", error);
            alert("Error: " + error.message);
        }
    }
</script>